#!/bin/sh
# -------------------------------------------------------------------------------------------
# @author: Araf Karsh Hamid
# -------------------------------------------------------------------------------------------
# Build Docker Container
# ===========================================================================================

# Get the Org Name, Service Name, Version and Full Container Name
source serviceName
source updateProperties

echo "---------------------------------------------------------------------------------------"
echo "Building the Container for $ORG/$SERVICE Service ..... "
echo "---------------------------------------------------------------------------------------"
cd src/docker
build $1 $2
cd ../../
echo "---------------------------------------------------------------------------------------"
